<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% users.each do |user| %>
      <tr>
        <td>
          <% if user.image? %>
            <%= image_tag user.image.url, :style=>"width: 50px; height: 50px;" %>
          <% else %>
            <%= image_tag 'no_image.jpg', :style=>"width: 50px; height: 50px;" %>
          <% end %>
        </td>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', user, class: "user_#{user.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
